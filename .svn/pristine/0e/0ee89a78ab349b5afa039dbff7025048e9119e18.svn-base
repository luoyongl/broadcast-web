html {
	height: 95%;
}


body {
	height: 100%;
}
			
form select {
	color: #FFFFFF!important;
	width: 60%!important;
}

.modal select{
	width: 100%!important;
}			
option {
	color: #000000;
}
			

 .content {
	width: 99%;
	border: 1px solid #FFFFFF;
	border-radius: 10px;
	padding:15px 0;

} 
			
.content_table {
	padding: 1% 1.5%;
	margin-top: 2.5%;
	
	width: 99%;
	border: 1px solid #FFFFFF;
	border-radius: 10px;
	overflow-y: scroll;
}		
form {
	width: 100%;
}
.modal input::-webkit-input-placeholder { /* WebKit browsers */
    color:#ffffff!important;
    opacity: .5;
}
.modal input:-moz-placeholder { /* Mozilla Firefox 4 to 18 */
    color:#ffffff;
}
.modal input::-moz-placeholder { /* Mozilla Firefox 19+ */
    color:#ffffff;
}
.modal input:-ms-input-placeholder { /* Internet Explorer 10+ */
    color:#ffffff;
}		
.pass input {
	margin: 0 10px;
}
			
.fixed-table-loading {
	display: none!important;
}

.right-tree{
	height: 100%;
	overflow: auto;
}

.right-tree ul li span{
	color: #FFFFFF;
}

.modal table {
	color: #000000;
}

.handle {
	float: right;
	margin: 10px;
}
