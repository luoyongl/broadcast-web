.nav.nav-tabs{
	padding: 5px;
	padding-bottom:0;
	margin-bottom: 1%;
}
.nav.nav-tabs li{
    text-align: center;
    background: rgba(255,255,255,.2);
    padding: 5px;
	height: 40px;
	width: 120px;
	margin: 0 0 5px 10px;
}

.nav.nav-tabs .selected_tab{
    background: #5bc0de;
    border:1px solid #ffffff;
    border-bottom:transparent;
	box-sizing:border-box;
	-moz-box-sizing:border-box; /* Firefox */
	-webkit-box-sizing:border-box; /* Safari */
}
.tab_modal{
    display: none;
}
.btn_modal{
	display: none;
}
